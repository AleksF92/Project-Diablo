else {
    //Look random
    if (lookGoal != 0) {
        var inc = (lookGoal / max(lookGoal, -lookGoal));
        image_angle += inc;
        lookGoal -= inc;
    }
    else {
        if (!alarm[1]) {
            alarm[1] = randomRound(cdLookMin, cdLookMax);
        }
    }
}
